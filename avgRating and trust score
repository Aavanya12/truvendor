<body>
  <div class="container">
    <h2>Vendor Trust Score Calculator</h2>

    <form id="trustForm">
      <label>Ratings (comma-separated):</label>
      <input type="text" id="ratings" placeholder="e.g., 5, 4, 3, 5">

      <label>Delivery Rate (%):</label>
      <input type="number" id="deliveryRate" placeholder="e.g., 85" min="0" max="100">

      <label>Number of Complaints:</label>
      <input type="number" id="complaints" placeholder="e.g., 2" min="0">

      <label>
        <input type="checkbox" id="hasFSSAI">
        Vendor has FSSAI License
      </label>

      <button type="submit">Calculate Trust Score</button>
    </form>

    <div class="result" id="result" style="display: none;"></div>
  </div>

  <script>
    document.getElementById("trustForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const ratingsStr = document.getElementById("ratings").value;
      const deliveryRate = parseFloat(document.getElementById("deliveryRate").value) || 0;
      const complaints = parseInt(document.getElementById("complaints").value) || 0;
      const hasFSSAI = document.getElementById("hasFSSAI").checked;

      const ratings = ratingsStr
        .split(',')
        .map(r => parseFloat(r.trim()))
        .filter(r => !isNaN(r) && r >= 1 && r <= 5);

      const avgRating = ratings.length > 0
        ? ratings.reduce((sum, r) => sum + r, 0) / ratings.length
        : 0;

      let trustScore = (avgRating * 20) +
                       (hasFSSAI ? 20 : 0) +
                       (deliveryRate * 0.2) -
                       (complaints * 5);

      // Clamp score between 0 and 100
      trustScore = Math.max(0, Math.min(100, trustScore));

      document.getElementById("result").innerHTML = `
        ⭐ Average Rating: <strong>${avgRating.toFixed(2)}</strong><br>
        ✅ Trust Score: <strong>${trustScore.toFixed(2)} / 100</strong>
      `;
      document.getElementById("result").style.display = "block";
    });
  </script>
</body>
</html>
